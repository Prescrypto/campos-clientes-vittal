<odoo>
    <data>
        <record model="ir.ui.view" id="view_partner_form">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
                <field name="arch" type="xml">
                <xpath expr="//h1" position="replace">
                    <h1 class="o_legal_name">
                        <field name="name" default_focus="1" placeholder="Name"/>
                    </h1>
                </xpath>

                <xpath expr="//h1" position="after">
                    <div class="o_name_container">
                        <!-- agregar nombre comercial -->
                        <div class="o_row" attrs="{'invisible': [('client_type', '!=', 'company')]}">
                            <field name="legal_name" placeholder="Legal Name"/>
                        </div>
                        <!-- agregar rfc -->
                        <div class="o_row" attrs="{'invisible': [('client_type', '!=', 'company')]}">
                            <field name="rfc" placeholder="RFC"/>
                        </div>
                        <div class="o_row">
                            <!-- agregar titular familiar -->
                            <field name="family_contact_id" widget="selection" domain="[('parent_id','=',id)]" attrs="{'invisible': [('client_type', '!=', 'family')]}"/>
                            <!-- agregar titular empresarial -->
                            <field name="company_contact_id" widget="selection" domain="[('parent_id','=',id)]" attrs="{'invisible': [('client_type', '!=', 'company')]}"/>
                        </div>
                        <!-- agregar codigo de grupo -->
                        <group>
                            <field class="oe_read_only" name="group_code" string="Code" placeholder="Code" />
                        </group>
                    </div>
                </xpath>

                <field name="fax" position="replace"/>

                <xpath expr="//field[@name='category_id']" position="after">
                    <!-- agregar campo de fechas de suscripci칩n -->
                    <field name="date" string="Join Date"/>
                </xpath>

                <xpath expr="//field[@name='phone']" position="before">
                    <!-- agregar tipo de negocio -->
                    <field name="business_type"/>
                    <!-- agregar campo de zona -->
                    <field name="zone"/>
                </xpath>

                <!-- quitar campos no usados -->
                <xpath expr="//field[@name='website']" position="replace"></xpath>
                <xpath expr="//field[@name='category_id']" position="replace"></xpath>
                <xpath expr="//field[@name='lang']" position="replace"></xpath>

                <!-- quitar campo de colonia (zip) existente -->
                <xpath expr="//field[@name='zip']" position="replace">
                    <div class="o_address_zip_container">
                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                        <field name="zip_extra" placeholder="ZIP Ext" class="o_address_zip_extra" />
                    </div>
                </xpath>

                <!-- renombrar campo de nombre -->
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" default_focus="1" placeholder="Name"/>
                </xpath>

                <!-- agregar campo de tipo de cliente -->
                <xpath expr="//field[@name='company_type']" position="replace">
                    <field name="client_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
                </xpath>

                <!-- quitar validaciones sobre campo deprecado -->
                <xpath expr="//field[@name='parent_id']" position="replace">
                    <field name="parent_id" attrs="{'invisible': True}"/>
                </xpath>
                <xpath expr="//field[@name='type']" position="replace">
                    <field name="type" attrs="{'invisible': True}"/>
                </xpath>

                <xpath expr="//button[@name='open_parent']" position="replace"></xpath>

                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='street2']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>

                <xpath expr="//field[@name='function']" position="replace"></xpath>
                <xpath expr="//field[@name='title']" position="replace"></xpath>

                <!-- modificar pesta침a para mostrar direcciones -->
                <xpath expr="//notebook/page[1]" position="replace">
                    <page string="Contacts and Addresses">
                        <field name="child_ids" mode="tree" context="{'form_view_ref': 'campos_clientes_vittal.view_address_form', 'default_street': street, 'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_zip_extra': zip_extra, 'default_country_id': country_id, 'default_address_type': 'coverage'}">
                            <tree>
                                <field name="type" attrs="{'invisible': True}"/>
                                <field name="address_type" string="Address Type"/>
                                <field name="street" string="Street"/>
                                <field name="street2" string="Interior"/>
                                <field name="city" string="City"/>
                                <field name="state_id" string="State"/>
                                <field name="zip" string="Zip"/>
                                <field name="zip_extra"/>
                                <field name="name" string="Name"/>
                                <field name="phone" string="Phone"/>
                                <field name="mobile" string="Mobile"/>
                                <field name="comment" string="Note"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <!-- agregar pesta침a para mostrar c치pitas -->
                <xpath expr="//notebook/page[1]" position="after">
                    <page string="Family Members" attrs="{'invisible': [('client_type', '!=', 'family')]}">
                        <field name="family_ids" mode="tree" context="{'form_view_ref': 'campos_clientes_vittal.view_member_form'}">
                            <tree>
                                <!-- <field name="associate_id"/> -->
                                <field name="name"/>
                                <field name="age"/>
                                <field name="birthday"/>
                                <field name="relationship"/>
                                <field name="function"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="user_active"/>
                                <field name="end_reason"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="prev_ailments"/>
                                <field name="allergies"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Company Members" attrs="{'invisible': [('client_type', '!=', 'company')]}">
                        <field name="company_ids" mode="tree" context="{'form_view_ref': 'campos_clientes_vittal.view_member_form'}">
                            <tree>
                                <field name="associate_id"/>
                                <field name="name"/>
                                <field name="age"/>
                                <field name="birthday"/>
                                <field name="relationship"/>
                                <field name="function"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="user_active"/>
                                <field name="end_reason"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="prev_ailments"/>
                                <field name="allergies"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
