<odoo>
    <data>
        <record model="ir.ui.view" id="view_sale_order_form">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <field name="payment_term_id" position="replace"/>

                <xpath expr="//notebook/page[1]" position="after">
                    <page string="Subscriptions">
                        <group>
                            <field name="sub_start_date" placeholder="Date when subscription starts" attrs="{'required': True}"/>
                            <field name="sub_end_date" placeholder="Date when subscription ends" string="End of Subscription"/>
                            <field name="sub_invoice_date" class="oe_read_only"/>
                            <field name="recurrence" attrs="{'required': True}"/>
                            <field name="auto_payment"/>
                            <field name="auto_invoice"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
