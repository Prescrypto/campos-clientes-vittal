<odoo>
    <data>
        <template id="assets_backend" name="campos_clientes_vittal assets" inherit_id="web.assets_backend">
            <xpath expr="." position="inside">
                <link rel="stylesheet" href="/campos_clientes_vittal/static/src/css/custom.css"/>
            </xpath>
        </template>

        <record model="ir.ui.view" id="view_partner_form">
            <field name="name">res.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
                <field name="arch" type="xml">
                <xpath expr="//h1" position="replace">
                    <h1 class="o_legal_name">
                        <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                    </h1>
                </xpath>

                <xpath expr="//h1" position="after">
                    <!-- agregar nombre comercial -->
                    <div class="o_row" attrs="{'invisible': [('client_type', '!=', 'company')]}">
                        <field name="legal_name" placeholder="Legal Name"/>
                    </div>
                    <!-- agregar rfc -->
                    <div class="o_row" attrs="{'invisible': [('client_type', '!=', 'company')]}">
                        <field name="rfc" placeholder="RFC"/>
                    </div>
                </xpath>


                <xpath expr="//field[@name='category_id']" position="after">
                    <!-- agregar campo de fechas de suscripci칩n -->
                    <field name="date" placeholder="Date client first subscribed" string="Join Date"/>
                    <field name="sub_start_date" placeholder="Date when subscription starts"/>
                    <field name="sub_end_date" placeholder="Date when subscription ends" string="End of Subscription" class="oe_read_only"/>
                    <!-- agregar campo de codigo de producto -->
                    <field name="product_custom_id" placeholder="e.g. CMPLUS"/>
                    <!-- agregar campo de c치pitas -->
                    <field name="quantity" string="Quantity in Group" attrs="{'invisible': [('client_type', '!=', 'family')]}"/>
                    <!-- agregar campo de hogar protegido -->
                    <field name="protected_home_user" class="oe_edit_only" attrs="{'invisible': ['|', ('protected_home_auto', '=', True), ('client_type', '!=', 'family')]}"/>
                    <field name="protected_home_auto" class="oe_edit_only" attrs="{'invisible': ['|', ('protected_home_auto', '=', False), ('client_type', '!=', 'family')], 'readonly': True}" string="Protected Home"/>
                    <field name="protected_home" class="oe_read_only" string="Protected Home" attrs="{'invisible': [('client_type', '!=', 'family')]}"/>
                </xpath>

                <xpath expr="//field[@name='phone']" position="before">
                    <!-- agregar c칩digo y nombre de grupo -->
                    <field name="group_name" string=""/>
                    <field name="group_id"/>
                    <!-- agregar campo de zona -->
                    <field name="zone"/>
                    <!-- agregar campo de codigo de pais -->
                    <field name="country_code"/>
                </xpath>

                <!-- quitar campos no usados -->
                <xpath expr="//field[@name='website']" position="replace"></xpath>
                <xpath expr="//field[@name='category_id']" position="replace"></xpath>
                <xpath expr="//field[@name='lang']" position="replace"></xpath>

                <!-- quitar campo de colonia (zip) existente -->
                <xpath expr="//field[@name='zip']" position="replace">
                    <div class="o_address_zip_container">
                        <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                        <field name="zip_extra" placeholder="ZIP Ext" class="o_address_zip_extra" />
                    </div>
                </xpath>

                <!-- renombrar campo de nombre -->
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" default_focus="1" placeholder="Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                </xpath>

                <!-- agregar campo de tipo de cliente -->
                <xpath expr="//field[@name='company_type']" position="replace">
                    <field name="client_type" widget="radio" class="oe_edit_only" options="{'horizontal': true}"/>
                </xpath>

                <!-- quitar validaciones sobre campo deprecado -->
                <xpath expr="//field[@name='parent_id']" position="replace">
                    <field name="parent_id" attrs="{'invisible': True}"/>
                </xpath>
                <xpath expr="//field[@name='type']" position="replace">
                    <field name="type" attrs="{'invisible': True}"/>
                </xpath>

                <xpath expr="//button[@name='open_parent']" position="replace"></xpath>

                <xpath expr="//field[@name='street']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='street2']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='state_id']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='zip']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>
                <xpath expr="//field[@name='country_id']" position="attributes">
                    <attribute name="attrs">{}</attribute>
                </xpath>

                <xpath expr="//field[@name='function']" position="replace"></xpath>
                <xpath expr="//field[@name='title']" position="replace"></xpath>

                <!-- agregar pesta침a para mostrar miembros -->
                <xpath expr="//notebook/page[1]" position="after">
                    <page string="Members" attrs="{'invisible': [('client_type', '=', 'individual')]}">
                        <field name="member_ids" mode="tree" context="{'default_parent_id': active_id, 'default_street': street, 'default_street2': street2, 'default_city': city, 'default_state_id': state_id, 'default_zip': zip, 'default_country_id': country_id, 'default_supplier': supplier, 'default_customer': customer, 'default_lang': lang,}">
                            <tree>
                                <field name="type" />
                                <field name="name"/>
                                <field name="phone"/>
                                <field name="email"/>
                            </tree>
                            <form string="Contact / Address">
                                <sheet>
                                    <field name="type" required="1" widget="radio" options="{'horizontal': true}"/>
                                    <hr/>
                                    <group>
                                        <group attrs="{'invisible': [('type','=', 'contact')]}">
                                            <label for="street" string="Address"/>
                                            <div>
                                                <div class="o_address_format" name="div_address">
                                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                                    <field name="city" placeholder="City" class="o_address_city"/>
                                                    <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}" context="{'country_id': country_id, 'zip': zip}"/>
                                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                                </div>
                                            </div>
                                        </group>
                                        <group>
                                            <field name="name" string="Contact Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                                            <field name="title" placeholder="e.g. Mr." attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                                            <field name="function" placeholder="e.g. Sales Director" attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                                            <field name="email"/>
                                            <field name="phone" widget="phone"/>
                                            <field name="mobile" widget="phone"/>
                                            <field name="comment" placeholder="internal note..."/>
                                        </group>
                                    </group>
                                    <field name="supplier" invisible="True"/>
                                    <field name="customer" invisible="True"/>
                                    <field name="lang" invisible="True"/>
                                    <field name="image" invisible="True"/>
                                </sheet>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
