<odoo>
  <data>

    <record model="ir.ui.view" id="view_partner_form">
        <field name="name">res.partner.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

          <!-- quitar campos no usados -->
          <xpath expr="//field[@name='website']" position="replace"></xpath>
          <xpath expr="//field[@name='category_id']" position="replace"></xpath>

          <!-- quitar campo de colonia (zip) existente -->
          <xpath expr="//field[@name='zip']" position="replace"></xpath>

          <!-- agregar codigo postal con codigo de colonia despues de la direccion -->
          <xpath expr="//label[@for='street']/parent::*" position="after">
            <form string="Zip Code">
                <group>
                    <group colspan="2" col="2">
                        <field name="zip" string="Zip"/>
                        <field name="zip_extra" string="Zip Extra"/>
                    </group>
                </group>
            </form>
          </xpath>

        </field>
    </record>

  </data>
</odoo>
