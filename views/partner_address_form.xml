<odoo>
    <data>
        <record id="view_address_form" model="ir.ui.view">
            <field name="name">Contacts &amp; Addresses</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <form string="Contacts &amp; Addresses">
                    <sheet>
                        <group>
                            <field name="type" widget="radio" options="{'horizontal': true}" attrs="{'required':True}"/>
                        </group>
                        <hr/>
                        <group>
                            <group attrs="{'invisible': [('type','=', 'contact')]}">
                                <label for="street" string="Address"/>
                                <div>
                                    <div class="o_address_format" name="div_address">
                                        <field name="street" placeholder="Street..." class="o_address_street" attrs="{'required': True}"/>
                                        <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                        <field name="sat_colonia_id" placeholder="Colonia" context="{'codigo_postal': zip, 'form_view_ref': 'campos_clientes_vittal.sat_colonia_form'}" options="{'no_create': True}" attrs="{'required': True}"/>
                                        <field name="sat_municipio_id" placeholder="Municipio" class="o_address_city" attrs="{'required': True}"/>
                                        <field name="sat_estado_id" placeholder="State" context="{'form_view_ref': 'campos_clientes_vittal.sat_estado_form'}" options="{'no_create': True}" attrs="{'required': True}" class="o_address_state"/>
                                        <field name="zip" placeholder="ZIP" class="o_address_zip" attrs="{'required': True}"/>
                                        <field name="sat_pais_id" placeholder="Pais" context="{'form_view_ref': 'campos_clientes_vittal.sat_pais_form'}" options="{'no_create': True}" attrs="{'required': True}" class="o_address_pais"/>
                                        <field name="cross_street" placeholder="Cross Street"/>
                                        <field name="crosses_with" placeholder="Crosses With"/>
                                        <field name="references" placeholder="References"/>
                                        <field name="exterior" placeholder="Exterior"/>
                                        <field name="details" placeholder="Special details or characteristics"/>
                                    </div>
                                </div>
                            </group>
                            <group>
                                <field name="name" string="RazÃ³n Social (o nombre de contacto)" attrs="{'required': [('type','=', 'fiscal')]}"/>
                                <field name="rfc" attrs="{'required': [('type','=', 'fiscal')]}"/>
                                <field name="email" attrs="{'required': [('type','=', 'fiscal')]}"/>
                                <field name="nacionalidad"/>
                                <field name="phone" widget="phone"/>
                                <field name="mobile" widget="phone"/>
                                <field name="comment" placeholder="Internal noteâ€¦"/>
                            </group>
                        </group>
                        <field name="supplier" invisible="True"/>
                        <field name="customer" invisible="True"/>
                        <field name="lang" invisible="True"/>
                        <field name="image" invisible="True"/>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
